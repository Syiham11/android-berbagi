<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?actionBarSize"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="1dp"
        android:transitionName="imagetoshow"
        card_view:cardUseCompatPadding="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Nama Donatur"
                        android:textStyle="bold"
                        android:transitionName="nametoshow"
                        android:textSize="16dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/nama_donatur"
                        android:maxLines="2"
                        android:ellipsize="end"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="0dp">

                    <ImageView
                        android:id="@+id/foto_panti"
                        android:src="@drawable/profile"
                        android:layout_width="120dp"
                        android:layout_height="120dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:paddingLeft="5dp"
                            android:text="Alamat:"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:paddingLeft="5dp"
                            android:textSize="12dp"
                            android:text="asashfashfuiashfiuashfsahfiusahfsauihfsaiufhsashafiusahfuihasf"/>

                        <TextView
                            android:text="Nomor Telp:"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv2"/>

                        <TextView
                            android:id="@+id/no_telp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:paddingLeft="5dp"
                            android:textSize="12dp"
                            android:text="asashfashfuiashfiuashfsahfiusahfsauihfsaiufhsashafiusahfuihasf"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal" android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:paddingTop="10dp"
                    android:weightSum="1">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btnTerima"
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="24dp"
                        android:padding="12dp"
                        android:textAlignment="center"
                        android:layout_gravity="left"
                        android:text="Terima"
                        android:background="#00bfa5"
                        android:textColor="@color/background_material_light" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btnTolak"
                        android:layout_width="115dp"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="Tolak"
                        android:background="#00bfa5"
                        android:textColor="@color/background_material_light"
                        android:layout_gravity="right"
                        android:textAlignment="center"
                        android:layout_weight="0.20"
                        android:layout_alignTop="@+id/btnTerima"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/btnTerima" />

                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>